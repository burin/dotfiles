export EDITOR=bbedit

# for homebrew
export PATH=/opt/homebrew/bin:$PATH
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# for node

export NVM_DIR="$HOME/.nvm"
HOMEBREW_NVM=$(brew --prefix nvm) # use homebrew nvm path instead of the usual .nvm path for scripts, keep $NVM_DIR for node installs
[ -s "$HOMEBREW_NVM/nvm.sh" ] && \. "$HOMEBREW_NVM/nvm.sh"  # This loads nvm
[ -s "$HOMEBREW_NVM/bash_completion" ] && \. "$HOMEBREW_NVM/bash_completion"  # This loads nvm bash_completion

# for dotfiles
export PATH=~/bin:$PATH

PS1="\n\u:\w \$(vcprompt) \nâ†’ "

# android development

export ANT_HOME=/usr/local/opt/ant
export MAVEN_HOME=/usr/local/opt/maven
export GRADLE_HOME=/usr/local/opt/gradle
export ANDROID_HOME=/usr/local/share/android-sdk
export ANDROID_SDK_ROOT=/usr/local/share/android-sdk
export ANDROID_NDK_HOME=/usr/local/share/android-ndk

export PATH=$ANT_HOME/bin:$PATH
export PATH=$MAVEN_HOME/bin:$PATH
export PATH=$GRADLE_HOME/bin:$PATH
export PATH=$ANDROID_HOME/tools:$PATH
export PATH=$ANDROID_HOME/platform-tools:$PATH
export PATH=$ANDROID_HOME/build-tools/19.1.0:$PATH
export PATH=$PATH:$ANDROID_NDK_HOME

# echo "Hostname: $HOSTNAME"
export BASH_SILENCE_DEPRECATION_WARNING=1

export NX_TASKS_RUNNER_DYNAMIC_OUTPUT=false
